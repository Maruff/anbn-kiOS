###############################################################################
#override timezone, otherwise use image timezone
[ -n "$ANBN_KIOS_OVERRIDE_TIMEZONE" ] || ANBN_KIOS_OVERRIDE_TIMEZONE=default

#override locale, otherwise use image locale
# Run locale -a to get a list of the locale names suitable for use in environment variables. Note that the spellings are different from the ones presented in the dpkg-reconfigure list.
# More information at https://wiki.debian.org/Locale#Standard
[ -n "$ANBN_KIOS_OVERRIDE_LOCALE" ] || ANBN_KIOS_OVERRIDE_LOCALE=default

#override keyboard model and layout, otherwise use image default
# see `man keyboard` for more information and the file
# `/usr/share/X11/xkb/rules/xorg.lst` for the list of models and layouts
[ -n "$ANBN_KIOS_OVERRIDE_KBD_MODEL" ] || ANBN_KIOS_OVERRIDE_KBD_MODEL=default
[ -n "$ANBN_KIOS_OVERRIDE_KBD_LAYOUT" ] || ANBN_KIOS_OVERRIDE_KBD_LAYOUT=default

#override password, otherwise use image default
[ -n "$ANBN_KIOS_OVERRIDE_PASSWORD" ] || ANBN_KIOS_OVERRIDE_PASSWORD=default

[ -n "$ANBN_KIOS_INCLUDE_CHROMIUM" ] || ANBN_KIOS_INCLUDE_CHROMIUM=yes
[ -n "$ANBN_KIOS_INCLUDE_LIGHTTPD" ] || ANBN_KIOS_INCLUDE_LIGHTTPD=yes

# FullPageDashboard repo & branch
[ -n "$FULLPAGE_DASHBOARD_REPO_SHIP" ] || FULLPAGE_DASHBOARD_REPO_SHIP=https://github.com/amitdar/FullPageDashboard.git
[ -n "$FULLPAGE_DASHBOARD_REPO_BUILD" ] || FULLPAGE_DASHBOARD_REPO_BUILD=
[ -n "$FULLPAGE_DASHBOARD_REPO_BRANCH" ] || FULLPAGE_DASHBOARD_REPO_BRANCH=master
[ -n "$FULLPAGE_INCLUDE_DASHBOARD" ] || FULLPAGE_INCLUDE_DASHBOARD=yes

# FullPageDashboard repo & branch
[ -n "$FULLPAGE_WELCOME_REPO_SHIP" ] || FULLPAGE_WELCOME_REPO_SHIP=https://github.com/tailorvj/FullPageOSWelcome.git
[ -n "$FULLPAGE_WELCOME_REPO_BUILD" ] || FULLPAGE_WELCOME_REPO_BUILD=
[ -n "$FULLPAGE_WELCOME_REPO_BRANCH" ] || FULLPAGE_WELCOME_REPO_BRANCH=master
[ -n "$FULLPAGE_INCLUDE_WELCOME" ] || FULLPAGE_INCLUDE_WELCOME=yes

# Add GPU acceleration
[ -n "$ANBN_KIOS_INCLUDE_ACCELERATION" ] || ANBN_KIOS_INCLUDE_ACCELERATION=yes

# Enable custom Splashscreen. Put your picture into anbn-kiOS/modules/anbn-kiOS/filesystem/home/pi/media/splash.png
[ -n "$ANBN_KIOS_CUSTOM_SPLASHSCREEN" ] || ANBN_KIOS_CUSTOM_SPLASHSCREEN=yes

# Install and enable x11vnc service
[ -n "$ANBN_KIOS_INCLUDE_X11VNC" ] || ANBN_KIOS_INCLUDE_X11VNC=yes
